<div class="contact_section layout_padding mt-4">
    <div class="container">
        <div class="row align-items-center">
            <div>
                <h1 class="about_taital">İletişime Geç</h1>

                <% if (typeof message !=="undefined" && message) { %>
                    <div class="alert alert-<%= message.type %>">
                        <p>
                            <%= message.text %>
                        </p>
                    </div>
                    <% } %>

                        <div class="mail_sectin">
                            <form method="post">
                                <label class="form-control mb-3">
                                    <%= fullName %>
                                </label>
                                <label class="form-control mb-3">
                                    <%= email %>
                                </label>
                                <input type="text" id="subject" name="subject" placeholder="Konu Başlığı"
                                    class="form-control" required>
                                <textarea class="form-control mb-3" placeholder="Message" rows="5" id="message"
                                    name="message" required></textarea>
                                <button type="submit" class="btn btn-success">Gönder</button>
                            </form>
                        </div>
            </div>
        </div>
    </div>
</div>